{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["es2019", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "app/*": ["./kiali/app/*"],
      "actions/*": ["./kiali/actions/*"],
      "components/*": ["./kiali/components/*"],
      "config": ["./kiali/config"],
      "config/*": ["./kiali/config/*"],
      "helpers/*": ["./kiali/helpers/*"],
      "hooks/*": ["./kiali/hooks/*"],
      "i18n": ["./openshift/i18n.ts"],
      "pages/*": ["./kiali/pages/*"],
      "reducers/*": ["./kiali/reducers/*"],
      "routes": ["./kiali/routes.tsx"],
      "routes/*": ["./kiali/routes/*"],
      "services/*": ["./kiali/services/*"],
      "store/*": ["./kiali/store/*"],
      "styles/*": ["./kiali/styles/*"],
      "types/*": ["./kiali/types/*"],
      "utils/*": ["./kiali/utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "coverage",
    "webpack",
    "jest",
    "src/kiali/setupTests.ts",
    "src/kiali/mocks/**/*"
  ],
  "include": ["src"]
}
